---
import DocsLayout from "@layouts/DocsLayout.astro";
import ArticlePage from "@components/layout/ArticlePage.astro";
import { getEntry } from "astro:content";

const entry = await getEntry({ collection: "docs", slug: "foundations/quick-start" });
if (!entry) {
  throw new Error("Foundations quick-start entry not found in content collection.");
}
const { Content, headings } = await entry.render();
---

<DocsLayout title={entry.data.title} description={entry.data.description}>
  <ArticlePage
    title={entry.data.title}
    description={entry.data.description}
    headings={headings}
  >
    <Content />
  </ArticlePage>
</DocsLayout>
