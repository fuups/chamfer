---
import type { IconProps } from "./types";
import { defaultIconProps } from "./types";

const {
  size = defaultIconProps.size,
  color = defaultIconProps.color,
  class: className = ""
} = Astro.props as IconProps & { class?: string };
---

<svg
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class={className}
  aria-hidden="true"
>
  <path
    d="M6 6L18 18"
    stroke={color}
    stroke-width="1.5"
    stroke-linecap="round"
    stroke-linejoin="round"
  ></path>
  <path
    d="M18 6L6 18"
    stroke={color}
