<section class="doc-section">
  <h3>Variants</h3>
  <div class="variant-grid">
    <figure>
      <figcaption>Primary</figcaption>
      <div class="button-row">
        <button class="ch-button ch-button--md ch-button--solid ch-button--primary" data-ch-component="button" type="button">
          <span class="ch-button__label">Solid</span>
        </button>
        <button class="ch-button ch-button--md ch-button--soft ch-button--primary" data-ch-component="button" type="button">
          <span class="ch-button__label">Soft</span>
        </button>
        <button class="ch-button ch-button--md ch-button--outline ch-button--primary" data-ch-component="button" type="button">
          <span class="ch-button__label">Outline</span>
        </button>
        <button class="ch-button ch-button--md ch-button--ghost ch-button--primary" data-ch-component="button" type="button">
          <span class="ch-button__label">Ghost</span>
        </button>
      </div>
    </figure>

    <figure>
      <figcaption>Secondary</figcaption>
      <div class="button-row">
        <button class="ch-button ch-button--md ch-button--solid ch-button--secondary" data-ch-component="button" type="button">
          <span class="ch-button__label">Solid</span>
        </button>
        <button class="ch-button ch-button--md ch-button--soft ch-button--secondary" data-ch-component="button" type="button">
          <span class="ch-button__label">Soft</span>
        </button>
        <button class="ch-button ch-button--md ch-button--outline ch-button--secondary" data-ch-component="button" type="button">
          <span class="ch-button__label">Outline</span>
        </button>
        <button class="ch-button ch-button--md ch-button--ghost ch-button--secondary" data-ch-component="button" type="button">
          <span class="ch-button__label">Ghost</span>
        </button>
      </div>
    </figure>
  </div>
</section>

<section class="doc-section">
  <h3>Sizes &amp; adornments</h3>
  <div class="button-row wrap">
    <button class="ch-button ch-button--sm ch-button--solid ch-button--primary" data-ch-component="button" type="button">
      <span class="ch-button__leading" aria-hidden="true">‚úì</span>
      <span class="ch-button__label">Small</span>
    </button>
    <button class="ch-button ch-button--md ch-button--solid ch-button--primary" data-ch-component="button" type="button">
      <span class="ch-button__leading" aria-hidden="true">‚Üê</span>
      <span class="ch-button__label">Medium</span>
    </button>
    <button class="ch-button ch-button--lg ch-button--solid ch-button--primary" data-ch-component="button" type="button">
      <span class="ch-button__label">Large</span>
      <span class="ch-button__trailing" aria-hidden="true">‚Üí</span>
    </button>
    <button
      class="ch-button ch-button--sm ch-button--ghost ch-button--primary ch-button--icon-only"
      data-ch-component="button"
      type="button"
      aria-label="Notifications"
    >
      <span class="ch-button__leading" aria-hidden="true">üîî</span>
      <span class="ch-button__label">Notifications</span>
    </button>
  </div>
</section>

<section class="doc-section">
  <h3>States</h3>
  <div class="state-grid">
    <button class="ch-button ch-button--md ch-button--solid ch-button--primary" data-ch-component="button" type="button">
      <span class="ch-button__label">Default</span>
    </button>
    <button
      class="ch-button ch-button--md ch-button--solid ch-button--primary"
      data-ch-component="button"
      data-demo-state="hover"
      type="button"
    >
      <span class="ch-button__label">Hover</span>
    </button>
    <button
      class="ch-button ch-button--md ch-button--solid ch-button--primary"
      data-ch-component="button"
      data-demo-state="active"
      type="button"
    >
      <span class="ch-button__label">Active</span>
    </button>
    <button
      class="ch-button ch-button--md ch-button--solid ch-button--primary"
      data-ch-component="button"
      data-demo-state="focus"
      type="button"
    >
      <span class="ch-button__label">Focus-visible</span>
    </button>
    <button
      class="ch-button ch-button--md ch-button--soft ch-button--secondary"
      data-ch-component="button"
      data-ch-ripple="false"
      type="button"
      aria-busy="true"
      disabled
    >
      <span class="ch-button__label">Loading‚Ä¶</span>
    </button>
    <a
      class="ch-button ch-button--md ch-button--ghost ch-button--secondary"
      data-ch-component="button"
      role="button"
      aria-disabled="true"
      tabindex="-1"
      href="#"
    >
      <span class="ch-button__label">Link disabled</span>
    </a>
  </div>
</section>

<style>
  .doc-section {
    display: grid;
    gap: var(--ch-space-md, 1rem);
  }

  .variant-grid {
    display: grid;
    gap: var(--ch-space-xl, 1.5rem);
  }

  figure {
    margin: 0;
    display: grid;
    gap: var(--ch-space-sm, 0.75rem);
  }

  figcaption {
    font-size: var(--ch-text-sm, 0.875rem);
    font-weight: var(--ch-weight-medium, 500);
    color: var(--ch-text-secondary, rgba(90, 97, 105, 0.88));
  }

  .button-row {
    display: flex;
    flex-wrap: wrap;
    gap: var(--ch-space-sm, 0.75rem);
  }

  .button-row.wrap {
    gap: var(--ch-space-md, 1rem);
  }

  .state-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--ch-space-md, 1rem);
  }

  .state-grid [data-demo-state="hover"] {
    background-color: var(--ch-button-hover-bg);
  }

  .state-grid [data-demo-state="active"] {
    background-color: var(--ch-button-active-bg);
  }

  .state-grid [data-demo-state="focus"] {
    outline: var(--ch-focus-outline-width, 2px) solid var(--ch-focus-outer, currentColor);
    outline-offset: var(--ch-focus-outline-offset, 2px);
    box-shadow:
      0 0 0 var(--ch-ring-inner-width, 2px) var(--ch-focus-accent, currentColor),
      0 0 0 calc(var(--ch-ring-inner-width, 2px) + var(--ch-ring-outer-width, 4px))
        var(--ch-focus-outer, currentColor);
  }
</style>
