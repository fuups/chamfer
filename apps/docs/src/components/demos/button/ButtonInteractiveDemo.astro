---
import { createDemo } from "../createDemo";

export const demo = createDemo({
  label: "Interactive buttons",
  code: String.raw`<div class="button-demo" style="display: flex; gap: var(--ch-space-sm); flex-wrap: wrap; align-items: center;">
  <button class="ch-button ch-button--md ch-button--solid ch-button--primary" data-ch-component="button" type="button">
    <span class="ch-button__label">Primary</span>
  </button>
  <button class="ch-button ch-button--md ch-button--soft ch-button--secondary" data-ch-component="button" type="button">
    <span class="ch-button__label">Secondary</span>
  </button>
  <button class="ch-button ch-button--md ch-button--soft ch-button--primary" data-ch-component="button" data-ch-ripple="false" type="button">
    <span class="ch-button__label">No ripple</span>
  </button>
</div>`
});

---

<div
  class="button-demo"
  style="display: flex; gap: var(--ch-space-sm); flex-wrap: wrap; align-items: center;"
>
  <button
    class="ch-button ch-button--md ch-button--solid ch-button--primary"
    data-ch-component="button"
    type="button"
  >
    <span class="ch-button__label">Primary</span>
  </button>
  <button
    class="ch-button ch-button--md ch-button--soft ch-button--secondary"
    data-ch-component="button"
    type="button"
  >
    <span class="ch-button__label">Secondary</span>
  </button>
  <button
    class="ch-button ch-button--md ch-button--soft ch-button--primary"
    data-ch-component="button"
    data-ch-ripple="false"
    type="button"
  >
    <span class="ch-button__label">No ripple</span>
  </button>
</div>
