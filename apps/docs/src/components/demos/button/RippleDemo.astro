---
import { createDemo } from "../createDemo";

export const demo = createDemo({
  label: "Ripple opt in",
  sources: [
    {
      label: "HTML",
      language: "html",
      code: String.raw`<div class="ripple-demo">
  <div class="ripple-demo__row">
    <button class="ch-button ch-button--md ch-button--solid ch-button--primary" data-ch-component="button" type="button">
      <span class="ch-button__label">Ripple on</span>
    </button>
    <button class="ch-button ch-button--md ch-button--soft ch-button--secondary" data-ch-component="button" data-ch-ripple="false" type="button">
      <span class="ch-button__label">Ripple off</span>
    </button>
  </div>
</div>`
    },
    {
      label: "JavaScript",
      language: "ts",
      code: String.raw`import { enhanceButton } from "@chamfer/behavior";

const buttons = document.querySelectorAll('[data-ch-component="button"]');
buttons.forEach((element) => {
  const enhancement = enhanceButton(element);
  element.addEventListener("disconnected", enhancement.destroy, { once: true });
});`
    }
  ]
});
