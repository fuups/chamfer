{
  "name": "@chamfer/tailwind",
  "version": "0.0.0",
  "description": "Tailwind CSS preset and plugin for Chamfer UI design tokens.",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./preset": {
      "types": "./dist/preset.d.ts",
      "default": "./dist/preset.js"
    },
    "./css": "./dist/index.css",
    "./theme.css": "./dist/theme.css",
    "./utilities.css": "./dist/utilities.css"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && node scripts/build-css.mjs",
    "dev": "pnpm run build -- --watch",
    "lint": "pnpm run typecheck",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "peerDependencies": {
    "@chamfer/core": "workspace:*",
    "@chamfer/tokens": "workspace:*",
    "tailwindcss": ">=4.1.16"
  },
  "dependencies": {
    "@chamfer/core": "workspace:*"
  },
  "devDependencies": {
    "tailwindcss": "4.1.16"
  },
  "keywords": [
    "tailwindcss",
    "design-system",
    "chamfer"
  ],
  "license": "MIT"
}
